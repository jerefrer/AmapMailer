- model_class = Newsletter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @newsletters.each do |newsletter|
      %tr
        %td= link_to newsletter.id, admin_newsletter_path(newsletter)
        %td= newsletter.name
        %td= newsletter.body
        %td=l newsletter.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_newsletter_path(newsletter), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_newsletter_path(newsletter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_newsletter_path, :class => 'btn btn-primary'
