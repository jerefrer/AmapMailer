= form_for @newsletter do |f|
  - if @newsletter.errors.any?
    #error_explanation
      %ul
        - @newsletter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :body
    = f.text_area :body, :class => 'redactor'
  .actions
    = f.submit 'Save'
